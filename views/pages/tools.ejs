<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head', {title:tools_data.title, description:tools_data.description}) %>
</head>
<body>
  <%- include('../partials/menu', {title:tools_data.title}) %>

<div class="content subpage-content" style="display: flex; flex-direction: column;">
  <%- include('../partials/header', {title:tools_data.title, subheading: 'Tools'}) %>
<div style="text-align: left">
  <% tools_data.about_tools.split("\n").forEach(element => { %>
    <%= element %>
    <br />
  <% }); %>
  <br />
</div>

<% tools_data.tools.forEach(member => { %>
  <div class="tool">
    <div class="tool-header">
      <img class="tools-img" src="<%= member.img_src %>" width="50px" height="50px" alt="<%= member.img_alt %>"/>
      <div class="tool-title">
        <h3><%= member.name %></h3>
        <a href="<%= member.github_ref %>"><h4 class="repo"><%= member.repo_name %>.git</h4></a>
      </div>
    </div>
    <div>
      <% if(member.name === "Shiver Dock"){ %>
        <%= member.description %>
        <br /><br />
      <% } else { %>
        <% member.description.split("\n").forEach(element => { %>
          <%= element %>
          <br />
        <% }); %>
      <% } %>
      <div class="tool-download">
        <button onclick="location.href='https://github.com/Blue-Shark-Friends/shiver-dock/archive/refs/tags/v0.0.1-alpha.zip';">Download latest release</button>
        <span class="release"><small><%= member.name %> <%= member.latest_release %></small></span>
      </div>
    </div>
  </div>
<% }); %>
<br /><br />
</div>

<%- include('../partials/footer') %>

</body>
</html>
